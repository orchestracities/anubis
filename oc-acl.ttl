@prefix : <http://www.w3.org/2000/01/rdf-schema#> .
@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix oc-acl: <https://github.com/orchestracities/anubis/blob/master/oc-acl.ttl#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

<>     dc:title "Anubis Access Control ontology";
    :comment """Extend W3C with custom definitions for Anubis. """ .

oc-acl:Delete     a :Class;
    :comment """Delete accesses are specific write access which only delete information.""";
    :label "append"@en;
    :subClassOf acl:Access,
          acl:Write .

oc-acl:ResourceTenantAgent     a :Class;
    :comment """A class of agents who have been authenticated and that belongs
to the same Tenant to which the resource requested belongs.
In other words, anyone who belong to the same Tenant as the resource can access
this resource, but not anonymously.
""";
    :label "Anyone belonging to the resource tenant";
    :subClassOf foaf:Agent,
          AuthenticatedAgent .

oc-acl:constraint     a rdf:Property;
    :comment "The rules to be satisfied to access the resource";
    :domain acl:Authorization;
    :label "Has Constraint"@en;
    rdfs:range [
      a owl:Class ;
      owl:unionOf ( odrl:Constraint odrl:LogicalConstraint ) ;
    ] .

